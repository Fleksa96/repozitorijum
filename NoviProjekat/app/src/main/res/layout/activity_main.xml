<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    >


    <ImageView
        android:id="@+id/img1"
        android:layout_width="220dp"
        android:layout_height="27dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_logo"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/roboto_light"
        android:textSize="12dp"
        android:textColor="@android:color/white"
        tools:text="ssfaasfsaaf"/>

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/temp1"
        android:drawableStart="@drawable/ico_temperature"
        android:fontFamily="@font/roboto_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:textSize="24sp"
        android:text="Temperature"
        android:gravity="center_vertical"

        android:layout_marginTop="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="30dp"
        android:textSize="36sp"
        android:fontFamily="@font/roboto_regular"

        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="23"/>

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/humid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:text="Humidity"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_vertical"

        android:drawableStart="@drawable/ico_humidity"
        />

<TextView
    android:textColor="@android:color/white"
    android:id="@+id/humid2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginEnd="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/temp2"
    tools:text="76"
    android:textSize="36sp"
    android:fontFamily="@font/roboto_regular"

    />


    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/aq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humid1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:text="IAQ Index"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_vertical"

        android:drawableStart="@drawable/ico_pollution"
        />



    <TextView
        android:id="@+id/aq2"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humid2"
        android:textSize="36sp"
        android:fontFamily="@font/roboto_regular"

        tools:text="111"
        />

    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#2F000000"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:text="Share"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="#2F000000"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Show History"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/share"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/foreground" />
















</androidx.constraintlayout.widget.ConstraintLayout>